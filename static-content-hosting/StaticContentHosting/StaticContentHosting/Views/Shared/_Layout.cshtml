<!DOCTYPE html>
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StaticContentHosting</title>
    <link rel="stylesheet" href="@Html.StaticContentUrl("~/lib/bootstrap/dist/css/bootstrap.min.css",Configuration)" />
    <link rel="stylesheet" href="@Html.StaticContentUrl("~/css/site.css",Configuration)" asp-append-version="true" />
    <link rel="stylesheet" href="~/StaticContentHosting.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StaticContentHosting</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - StaticContentHosting - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="@Html.StaticContentUrl("~/lib/jquery/dist/jquery.min.js",Configuration)"></script>
    <script src="@Html.StaticContentUrl("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js",Configuration)"></script>
    <script src="@Html.StaticContentUrl("~/js/site.js",Configuration)" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
