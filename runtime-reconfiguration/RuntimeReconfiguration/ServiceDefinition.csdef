    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
    </Imports>
    <ConfigurationSettings>
      <Setting name="CustomSetting" />
      <Setting name="SomePropertyThatRequiresRestart" />
    </ConfigurationSettings>
  </WebRole>
</ServiceDefinition>