@model ResiliencyDemos.Models.Book
@{
    ViewBag.Title = "Graceful Degredation Demo";
}

<div class="row">
    <div class="col-md-6">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-md-6">
        @{ Html.RenderPartial("_Mode", "Unprotected"); }
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4">

        <!--
        The following <img> tag shows the typical way that a product image would be rendered. There is no protection offered here.
        If for any reason the image fails to load, or loads slowly, the user experience is impacted.
        See also the "Broken" and "Slow" examples, which force these effects.
        -->

        <img class="img-responsive" src="@Model.ImageUri" alt="@Model.ShortTitle"/>

    </div>
    <div class="col-md-8">
        <h1 class="media-heading">@Model.Title</h1>
        <h3>@Model.Author</h3>
        @Html.FormatParagraphs(Model.Summary)
    </div>
</div>
